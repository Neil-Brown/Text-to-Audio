extends navbar
block content
	.container-fluid
		.row
			.col
				.dropdown
					button.btn.btn-primary.dropdown-toggle#voice(type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") No voice Selected
					.dropdown-menu#voiceMenu(aria-labelledby="voice")
		.controls#voiceControl
			.row
				.col
					input#pitch(type="number" min="0" max="2" step="0.1" value="1")
				.col
					input#rate(type="number" min="0.1" max="10" step="0.1" value="1")
			.row
				.col
					label(for="pitch") Pitch (0-2)
				.col
					label(for="rate") Rate (0.1 - 10)
		.row
			.col
				textArea#textInput(type="text" placeholder="Place text to convert here ...")
		.controls#audioControl
			.row
				.col
					button.btn.btn-primary#speak Play
				.col
					button.btn.btn-primary#pause Pause
				.col
					button.btn.btn-primary#stop Stop
			.row
				.col
					.form-check.form-switch
						input#recordCheck.form-check-input(type="checkbox" value="" )
						label.form-check-label(for="recordCheck") Record Audio
		.row
			.col.center
				audio#audioPlayer(controls='true' type="audio/wav" title="text2audio.wav")

block append scripts
	script(src="/js/home.js")
